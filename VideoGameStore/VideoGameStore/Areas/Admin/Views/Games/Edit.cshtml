@model VideoGameStore.Areas.Admin.Models.GameViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-warning" role="alert">
        @TempData["message"]
    </div>
}

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="game.GameID" />
            <div class="form-group">
                <label asp-for="game.Title" class="control-label"></label>
                <input asp-for="game.Title" class="form-control" />
                <span asp-validation-for="game.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.ReleaseDate" class="control-label"></label>
                <input asp-for="game.ReleaseDate" class="form-control" />
                <span asp-validation-for="game.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Platform" class="control-label"></label>
                <select asp-for="game.Platform" class="form-control" asp-items="Html.GetEnumSelectList<VideoGameStore.Models.Platform>()"></select>
                <span asp-validation-for="game.Platform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Price" class="control-label"></label>
                <input asp-for="game.Price" class="form-control" />
                <span asp-validation-for="game.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.StockQuantity" class="control-label"></label>
                <input asp-for="game.StockQuantity" class="form-control" />
                <span asp-validation-for="game.StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.GenreID" class="control-label"></label>
                <select asp-for="game.GenreID" class="form-control" asp-items='@new SelectList(Model.genres, "GenreId", "Name", Model.game.Genre)'></select>
                <span asp-validation-for="game.GenreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.PublisherID" class="control-label"></label>
                <select asp-for="game.PublisherID" class="form-control" asp-items='@new SelectList(Model.publishers, "PublisherId", "Name", Model.game.Publisher)'></select>
                <span asp-validation-for="game.PublisherID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}