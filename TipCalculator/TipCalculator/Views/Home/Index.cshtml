@model TipCalculatorModel;

@{
    ViewBag.Title = "Tip Calculator";
}

<h1>Tip Calculator</h1>

<form asp-action="Index" , method="post">
    <div>
        <label asp-for="MealCost">Cost of Meal: </label>
        <input asp-for="MealCost"/>
    </div>
    <div>
        <label>15% Tip: $</label>
        <input value="@ViewBag.Fifteen.ToString("c2")" readonly />
    </div>
    <div>
        <label>20% Tip: $</label>
        <input value="@ViewBag.Twenty.ToString("c2")" readonly/>
    </div>
    <div>
        <label>25% Tip: $</label>
        <input value="@ViewBag.TwentyFive.ToString("c2")" readonly/>
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>

</form>
